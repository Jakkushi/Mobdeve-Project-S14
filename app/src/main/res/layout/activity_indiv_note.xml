<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232D42"
    tools:context=".IndivNoteActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/indiv_gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/indiv_gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="10dp" />

    <TextView
        android:id="@+id/indiv_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_rectangle_topbar"
        android:fontFamily="@font/roboto_slab"
        android:padding="10sp"
        android:text="@string/title_placeholder"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:autoSizeMaxTextSize="24sp"
        app:autoSizeMinTextSize="16sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toStartOf="@+id/indiv_gl_end"
        app:layout_constraintStart_toStartOf="@+id/indiv_gl_start"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/indiv_fab_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#D33F3F"
        android:clickable="true"
        android:contentDescription="@string/camera_fab_desc"
        android:focusable="true"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/indiv_gl_end"
        app:maxImageSize="30dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_indiv_tags"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rectangle_topbar"
        app:layout_constraintBottom_toTopOf="@+id/indiv_rv_templates"
        app:layout_constraintEnd_toEndOf="@id/indiv_gl_end"
        app:layout_constraintStart_toStartOf="@id/indiv_gl_start"
        app:layout_constraintTop_toBottomOf="@+id/indiv_tv_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/indiv_rv_templates"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="57dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/indiv_gl_end"
        app:layout_constraintStart_toStartOf="@+id/indiv_gl_start"
        app:layout_constraintTop_toBottomOf="@+id/indiv_tv_title" />

</androidx.constraintlayout.widget.ConstraintLayout>